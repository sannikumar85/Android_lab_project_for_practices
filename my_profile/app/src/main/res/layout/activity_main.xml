<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#667eea">

    <!-- Theme Toggle Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:text="Dark Mode"
        android:textColor="#2C3E50"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        app:thumbTint="#667eea"
        app:trackTint="#BDC3C7" />

    <!-- Welcome Screen Container -->
    <LinearLayout
        android:id="@+id/welcome_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <!-- Profile Image with 3D effect -->
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp">

            <!-- Shadow layer -->
            <View
                android:id="@+id/image_shadow"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:background="#34495E"
                android:alpha="0.3" />

            <!-- Main profile image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:src="@android:drawable/sym_def_app_icon"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                android:contentDescription="Profile Image" />

            <!-- Glow effect -->
            <View
                android:id="@+id/glow_effect"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="#667eea"
                android:alpha="0.6" />
        </RelativeLayout>

        <!-- Name Text with gradient -->
        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanni Kumar Gupta"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#667eea"
            android:letterSpacing="0.1"
            android:elevation="4dp"
            android:shadowColor="#34495E"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Welcome to My Profile"
            android:textSize="16sp"
            android:textColor="#7F8C8D"
            android:fontFamily="sans-serif-light"
            android:alpha="0.8" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:indeterminateTint="#667eea"
            style="?android:attr/progressBarStyle" />

    </LinearLayout>

    <!-- Home Screen Container -->
    <RelativeLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <TextView
                android:id="@+id/welcome_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Home"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/welcome_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Explore my digital space"
                android:textSize="16sp"
                android:textColor="#7F8C8D"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

        <!-- Content Area -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_section"
            android:layout_above="@id/bottom_navigation"
            android:padding="20dp">

            <!-- Home Content -->
            <LinearLayout
                android:id="@+id/home_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_marginBottom="20dp"
                    android:alpha="0.7"
                    android:contentDescription="Home Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Dashboard"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is your personal space. Navigate through different sections using the bottom navigation."
                    android:textSize="16sp"
                    android:textColor="#7F8C8D"
                    android:textAlignment="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- About Content -->
            <LinearLayout
                android:id="@+id/about_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:layout_marginBottom="20dp"
                    android:alpha="0.7"
                    android:contentDescription="About Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello! I'm Sanni Kumar Gupta, a passionate developer creating amazing Android applications. I love crafting beautiful user interfaces and implementing smooth animations."
                    android:textSize="16sp"
                    android:textColor="#7F8C8D"
                    android:textAlignment="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- Profile Content -->
            <LinearLayout
                android:id="@+id/profile_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="20dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profile Picture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sanni Kumar Gupta"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Developer"
                    android:textSize="16sp"
                    android:textColor="#667eea"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact: sanni.kumar@example.com\nLocation: India\nExperience: Mobile App Development"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:textAlignment="center"
                    android:lineSpacingExtra="6dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp">

            <!-- About Tab -->
            <LinearLayout
                android:id="@+id/nav_about"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/nav_about_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#95A5A6"
                    android:contentDescription="About Tab" />

                <TextView
                    android:id="@+id/nav_about_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="About"
                    android:textSize="12sp"
                    android:textColor="#95A5A6"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Home Tab -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/nav_home_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="#667eea"
                    android:contentDescription="Home Tab" />

                <TextView
                    android:id="@+id/nav_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="#667eea"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Profile Tab -->
            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/nav_profile_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#95A5A6"
                    android:contentDescription="Profile Tab" />

                <TextView
                    android:id="@+id/nav_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Profile"
                    android:textSize="12sp"
                    android:textColor="#95A5A6"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>