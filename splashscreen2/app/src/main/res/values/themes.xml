<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- This is the foundational theme for your application's activities (except the splash screen).
         It inherits from MaterialComponents and defines your core brand colors. -->
    <style name="Theme.App.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here for regular activities. -->
    </style>

    <!-- Main application theme (applied to the application tag and most activities) -->
    <!-- This theme inherits the customizations from Theme.App.Base -->
    <style name="Theme.SplashScreen.App" parent="Theme.App.Base" />


    <!-- Theme specifically for the Splash Screen Activity -->
    <!-- It has no action bar and is configured for a fullscreen experience. -->
    <style name="Theme.App.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/splash_background_color</item> <!-- Example: Using a color -->
        <!-- Or use a drawable: <item name="android:windowBackground">@drawable/splash_background</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Optional: For edge-to-edge display on devices with cutouts -->
        <!-- <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item> -->
    </style>

</resources>
